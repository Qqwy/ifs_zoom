  type:             exitcode-stdio-1.0
  hs-source-dirs:   test
  main-is:          DocTest.hs

  ghc-options:
      -O2
      -threaded
      -rtsopts

test-suite hspec
  build-depends:
        base
      , hspec
      , hspec-discover
      , QuickCheck
      , accelerate
      , accelerate-llvm
      , accelerate-llvm-native
      , accelerate-llvm-ptx
      , linear
      , IFSZoom
  other-modules:
        Lib.SortSpec
      , Lib.CameraSpec
      , Lib.ChaosGameSpec
  default-language: Haskell2010
  type:             exitcode-stdio-1.0
  hs-source-dirs:   test
  main-is:          Spec.hs

  ghc-options:
      -O2
      -threaded
      -rtsopts



